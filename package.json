{
  "name": "unified-shipping-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Unified shipping automation platform with AI chatbot, memory, and agent infrastructure",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "pnpm --filter @unified/database migrate",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "format": "prettier -w \"**/*.{js,jsx,ts,tsx,css,md,json,yml,yaml}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.7.2",
    "prettier": "^3.3.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md,json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0"
    }
  }
}
