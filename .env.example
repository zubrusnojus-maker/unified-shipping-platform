# Unified Shipping Platform Environment Configuration

# ===========================================
# DATABASE
# ===========================================
POSTGRES_USER=unified
POSTGRES_PASSWORD=unified_password
POSTGRES_DB=unified_shipping
PGHOST=localhost
PGPORT=5432

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# API SERVER
# ===========================================
PORT=3000
NODE_ENV=development

# ===========================================
# LLM / AI
# ===========================================
# HuggingFace API Token (required for chatbot)
HF_TOKEN=your_huggingface_token_here
HF_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# ===========================================
# SHIPPING PROVIDERS
# ===========================================
# EasyPost (100+ carriers, domestic US focus)
EASYPOST_API_KEY=your_easypost_api_key
EASYPOST_MODE=test  # test or production

# Easyship (550+ couriers, international)
EASYSHIP_API_KEY=your_easyship_api_key
EASYSHIP_MODE=sandbox  # sandbox or production

# ===========================================
# N8N WORKFLOW AUTOMATION
# ===========================================
N8N_USER=admin
N8N_PASSWORD=admin
N8N_HOST=localhost
N8N_WEBHOOK_BASE_URL=http://localhost:5678/webhook
N8N_WEBHOOK_INTAKE_PATH=typeform-intake
N8N_WEBHOOK_RATES_PATH=rate-comparison
N8N_WEBHOOK_BOOK_PATH=book-shipment
N8N_WEBHOOK_TRACKING_PATH=tracking

# ===========================================
# AGENT INFRASTRUCTURE
# ===========================================
AGENT_QUEUE_NAME=agent-tasks
MANAGER_CONCURRENCY=2
WORKER_CONCURRENCY=1
SANDBOX_DIR=/tmp/agent-sandbox

# GitHub integration (for PR creation)
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_OWNER=your_github_username_or_org
GITHUB_REPO=your_repo_name

# ===========================================
# PGADMIN (optional, for database management)
# ===========================================
PGADMIN_EMAIL=admin@localhost.com
PGADMIN_PASSWORD=admin
