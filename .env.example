# Global defaults
NODE_ENV=development

# Turbo Remote Cache (optional, set in GitHub repo secrets too)
TURBO_TEAM=
TURBO_TOKEN=

# Database (Postgres)
PGHOST=localhost
PGPORT=5432
PGUSER=unified
PGPASSWORD=unified_password
PGDATABASE=unified_shipping

# Redis / Queue
REDIS_URL=redis://localhost:6379
AGENT_QUEUE_NAME=agent-tasks

# GitHub automation (Agent Manager)
GITHUB_TOKEN=
GITHUB_OWNER=
GITHUB_REPO=

# LLM
HF_TOKEN=
HF_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# Shipping Providers
EASYPOST_API_KEY=
EASYPOST_TEST_API_KEY=
EASYPOST_PROD_API_KEY=
EASYPOST_MODE=test # test|production
EASYPOST_LABEL_FORMAT=PDF # PDF|PNG|ZPL
EASYPOST_REQUIRE_END_SHIPPER=auto # auto|true|false
EASYPOST_END_SHIPPER_ID=

EASYSHIP_API_KEY=
EASYSHIP_MODE=sandbox # sandbox|production
EASYSHIP_CURRENCY=USD
# Preferred new names (legacy names still supported)
EASYSHIP_WEIGHT_UNIT=lb # lb|kg
EASYSHIP_DIMENSION_UNIT=in # in|cm
EASYSHIP_INCOTERM_DEFAULT=DDP # DDP|DDU (used when destination not in DDP restricted list)
EASYSHIP_DDP_RESTRICTED=MX,BR,AR # Comma-separated country codes that must use DDU
# Optional explicit API base URL override (rarely needed)
# EASYSHIP_BASE_URL=
EASYSHIP_LABEL_FORMAT=PDF # PDF|PNG|ZPL

# Shipping-wide defaults (used if provider-specific not set)
SHIPPING_DEFAULT_CURRENCY=USD

# Address validation (API preflight)
ADDRESS_VALIDATION_MODE=remote # remote|off (local/both reserved for future validators)
ADDRESS_AUTOFIX=false

# Shipper (origin) defaults applied when origin fields are missing
SHIPPER_NAME=
SHIPPER_COMPANY=
SHIPPER_STREET1=
SHIPPER_STREET2=
SHIPPER_CITY=
SHIPPER_STATE=
SHIPPER_ZIP=
SHIPPER_COUNTRY=
SHIPPER_PHONE=
SHIPPER_EMAIL=

# n8n Webhooks
N8N_WEBHOOK_BASE_URL=
N8N_WEBHOOK_INTAKE_PATH=
N8N_WEBHOOK_RATES_PATH=
N8N_WEBHOOK_BOOK_PATH=
N8N_WEBHOOK_TRACKING_PATH=

# Agent Worker
SANDBOX_DIR=/tmp/agent-sandbox
# Unified Shipping Platform Environment Configuration

# ===========================================
# DATABASE
# ===========================================
POSTGRES_USER=unified
POSTGRES_PASSWORD=unified_password
POSTGRES_DB=unified_shipping
PGHOST=localhost
PGPORT=5432

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# API SERVER
# ===========================================
PORT=3000
NODE_ENV=development

# ===========================================
# LLM / AI
# ===========================================
# HuggingFace API Token (required for chatbot)
HF_TOKEN=your_huggingface_token_here
HF_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# ===========================================
# SHIPPING PROVIDERS
# ===========================================
# EasyPost (100+ carriers, domestic US focus)
EASYPOST_API_KEY=your_easypost_api_key
EASYPOST_MODE=test  # test or production

# Easyship (550+ couriers, international)
EASYSHIP_API_KEY=your_easyship_api_key
EASYSHIP_MODE=sandbox  # sandbox or production

# ===========================================
# N8N WORKFLOW AUTOMATION
# ===========================================
N8N_USER=admin
N8N_PASSWORD=admin
N8N_HOST=localhost
N8N_WEBHOOK_BASE_URL=http://localhost:5678/webhook
N8N_WEBHOOK_INTAKE_PATH=typeform-intake
N8N_WEBHOOK_RATES_PATH=rate-comparison
N8N_WEBHOOK_BOOK_PATH=book-shipment
N8N_WEBHOOK_TRACKING_PATH=tracking

# ===========================================
# AGENT INFRASTRUCTURE
# ===========================================
AGENT_QUEUE_NAME=agent-tasks
MANAGER_CONCURRENCY=2
WORKER_CONCURRENCY=1
SANDBOX_DIR=/tmp/agent-sandbox

# GitHub integration (for PR creation)
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_OWNER=your_github_username_or_org
GITHUB_REPO=your_repo_name

# ===========================================
# PGADMIN (optional, for database management)
# ===========================================
PGADMIN_EMAIL=admin@localhost.com
PGADMIN_PASSWORD=admin
